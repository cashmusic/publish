{{{header}}}
<!--SITE HEADER-->

<main id="main" class="article-page static pure-g" role="main">
<article class="pure-u-1 expanded dark">

  <div id="hash-hero" class="drk-prple" role="hero">
    <h3>Tag{{#title}} #{{tag}}{{/title}}</h3>
    <h1 class="page-title">{{#title}}{{title}}{{/title}}{{^title}}#{{tag}}{{/title}}</h1>
    {{#description}}<p>{{description}}</p>{{/description}}
  </div><!--hero-->

  <section class="pure-u-1 article-content">




     {{#featured_work}}
     <div class="pure-u-1 featured-work {{type}}">
         <div class="featured-banner {{template_blend}} {{template_bg_style}}" style="background-image:url('{{#assets}}{{url}}{{/assets}}');">
             <h2><a href="/{{type}}/{{id}}">{{title}}</a></h2>
               <h3>{{description}}</h3>

         </div><!--featured-banner-->
         <div class="featured-body">
             <div class="pure-u-1 pure-u-md-1-5">
               <a class="avatar" href="/author/{{id}}" target="_blank">
               <img src="{{photo.url}}" alt="{{name}}" /></a>
                <div class="details">
                  <h4>{{author_name}}, {{author_byline}}</h4>
                     <a href="{{#links}}{{url}}{{/links}}" target="_blank">{{title}}</a>
               </div><!--details-->
             </div><!--author--><div class="inner pure-u-1 pure-u-md-3-5">
               {{{content}}}
             </div><!--inner--><div class="pure-u-1 pure-u-md-1-5">
               {{{display_share}}}
             </div><!--  -->
      </div><!--featured-body-->

      <a class="more-link" href="/{{type}}/{{id}}">Read more</a>
      {{/featured_work}}



    <section class="pure-u-1 section-title">
    <h3>Recent articles marked {{tag}}</h3>
    </section>
  <section class="pure-u-1">
{{#work}}<div class="article-archive pure-u-1 pure-u-md-1-4 dark {{type}}">
    <a class="wrap-link" href="/{{type}}/{{id}}"><div class="sixteen-nine">
        <div class="sn-content" style="background-image:url({{#assets}}{{url}}{{/assets}})">
        <!--img src="{{#assets}}{{url}}{{/assets}}" alt="{{author_id}}" /-->
      </div><!--sn-content-->
    </div><!--sixteen-nine--></a><!--wrap-link-->
          <div id="{{author_id}}" class="inner">
            <div class="corner-marker"></div><!--important-->
                    <h2><a href="/{{type}}/{{id}}">{{title}}</a></h2>
                    <h4><a href="/author/{{id}}">{{author_name}}</a></h4>
                    <p>{{description}}</p>
                    <a class="more-link" href="/{{type}}/{{id}}">Read more</a>
          </div><!--inner-->
    </div><!--article-archive-->{{/work}}
</section><!--pure-->
</section><!--article-content-->
</article>

</main><!--#main-->

<!--SITE FOOTER-->
{{{footer}}}
