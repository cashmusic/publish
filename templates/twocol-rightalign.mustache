{{{header}}}
<!--SITE HEADER-->

<!--Article Inline Styles-->
<style type="text/css">
    {{template_styles}}
</style>

<main id="main" class="article-page pure-g" role="main">

<article id="{{author_id}}" class="pure-u-1 expanded {{template}} {{template_additional}}">
  <section class="article-content">

		<section class="pure-u-1">
      <h4 class="date">{{display_time}}</h4>
      <h1 class="page-title">{{title}}</h1>
		</section>

		{{#assets}}
		<div class="pure-u-1 pure-u-md-1-2">
					<img class="noise image-inline" src="{{assets.0.url}}">
	</div>{{/assets}}<section class="pure-u-1 pure-u-md-1-2">
      {{{content}}}
		</section>

    <footer class="pure-u-1">
      <h4>Tags:</h4>
      <ul class="tags">
          {{#tags}}
               <li><a class="tag" href="/tag/{{tag}}">{{tag}}</a></li>
          {{/tags}}
      </ul>

      {{{display_share}}}
      {{{display_byline}}}
    </footer>
  </section><!--article-content-->
</article>
</main><!--main-->

<!--SITE FOOTER-->
{{{footer}}}
